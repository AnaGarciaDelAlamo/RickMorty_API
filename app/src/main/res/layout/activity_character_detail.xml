<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/nameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name: Character Name"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/statusTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status: Character Status"
        android:layout_below="@id/nameTextView"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/speciesTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Species: Character Species"
        android:layout_below="@id/statusTextView"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/typeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Type: Character Type"
        android:layout_below="@id/speciesTextView"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/genderTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gender: Character Gender"
        android:layout_below="@id/typeTextView"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/originTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Origin: Character Origin"
        android:layout_below="@id/genderTextView"
        android:layout_marginTop="8dp" />
    <TextView
        android:id="@+id/locationTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location: Character Location"
        android:layout_below="@id/originTextView"
        android:layout_marginTop="8dp" />
    <TextView
        android:id="@+id/episodeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Episode: Character Episode"
        android:layout_below="@id/locationTextView"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/botonFav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/episodeTextView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="52dp"
        android:layout_marginTop="320dp"
        android:text="FAVORITO" />

    <Button
        android:id="@+id/btnVerFav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/episodeTextView"
        android:layout_marginStart="76dp"
        android:layout_marginTop="324dp"
        android:layout_toEndOf="@+id/botonFav"
        android:text="Ver favoritos" />




</RelativeLayout>

